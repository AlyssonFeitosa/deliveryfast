@using deliveryfast.Models;
@model Cadastro
@{
    ViewData["Title"] = "Insira os Dados Para Entrega!";
}
<h3>@ViewData["Title"]</h3>

    <div>
        <form asp-action ="Formulario" method="POST">
            <div>
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" required />
            </div>
            <div>
                <label asp-for="Endereco">Endereço:</label>
                <input asp-for="Endereco" required />
            </div>
            <div>
                <label asp-for="Telefone">Telefone:</label>
                <input asp-for="Telefone" required />
            </div>
            <div>
                <label asp-for="tipopao">Tipo de Pão:</label>
                <select required="required" name="tipopao">
                    <option selected="selected" value="">Selecione</option>
                    <option value="1">Francês</option>
                    <option value="2">Doce</option>
                    <option value="3">Carteira</option>
                </select>
            </div>
            <div>
                <label asp-for="Quantidade">Quantidade:</label>
                <input asp-for="Quantidade" required />
            </div>

            <div>
                <input type="submit" value="CONCLUIR PEDIDO" class="btn btn-large btn-warning text-warning" style="background-color: red" style="border-radius: 0.5%;"/>
                
                <p id = "Mensagem">@ViewBag.Mensagem </p>
                

            </div>
        </form>
    </div>